@model IEnumerable<KyivBarGuideDomain.Model.FavouriteBar>

@{
    ViewData["Title"] = "Favourite Bars";
    var defaultImage = "/images/default-bar.jpg"; // Default image path
}

<h1 class="mb-4">Favourite Bars</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="
                position: relative;
                width: 100%;
                min-height: 300px;
                display: flex;
                flex-direction: column;
                background: #fff;
                border: 1px solid black;
                border-radius: 0;
                overflow: hidden;
                box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
                ">
                <img class="card-img-top" src="@(string.IsNullOrEmpty(item.Added.Picture) ? defaultImage : item.Added.Picture)" alt="@item.Added.Name" style="height: 180px; object-fit: cover; border-bottom: 1px solid black;">
                <div class="card-body" style="flex-grow: 1; display: flex; flex-direction: column; justify-content: space-between; padding: 15px;">
                    <div>
                        <h5 class="card-title">@item.Added.Name</h5>
                    </div>
                    <div>
                        <a asp-controller="Bars" asp-action="Details" asp-route-id="@item.Added.Id" class="btn btn-info">View</a>
                        <form asp-action="RemoveFromFavourites" asp-route-barId="@item.AddedId" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
