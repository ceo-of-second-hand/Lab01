@{
    ViewData["Title"] = "Bar Created";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Bar Created Successfully!</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4>Your bar "@ViewBag.BarName" has been created!</h4>
                        <p>Please save this bar password - it will be needed for other admins to join your bar:</p>
                        <div class="text-center">
                            <h3 class="text-primary">@ViewBag.BarPassword</h3>
                        </div>
                        <p class="mt-3">Share this password with other admins who should have access to your bar.</p>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 