@using KyivBarGuideDomain.Model
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">KyivBarGuide</h1>
            <p class="lead mb-5">Your ultimate guide to Kyiv's vibrant bar scene</p>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="alert alert-success">
                    <h4>Welcome back, @User.Identity.Name!</h4>
                    <p>Ready to explore Kyiv's bars?</p>
                    <form asp-controller="Clients" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h3>Client Access</h3>
                            </div>
                            <div class="card-body">
                                <p>Explore bars, make reservations, and discover new places</p>
                                <div class="d-grid gap-2">
                                    <a asp-controller="Clients" asp-action="Create" class="btn btn-secondary">Sign up as Client</a>
                                    <a asp-controller="Clients" asp-action="Login" class="btn btn-primary">Sign in as Client</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h3>Admin Access</h3>
                            </div>
                            <div class="card-body">
                                <p>Manage your bar, update menus, and handle reservations</p>
                                <div class="d-grid gap-2">
                                    <a asp-controller="AdminAuth" asp-action="SignUpAsAdmin" class="btn btn-secondary">Sign Up as Admin</a>
                                    <a asp-controller="AdminAuth" asp-action="Login" class="btn btn-primary">Sign in as Admin</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
