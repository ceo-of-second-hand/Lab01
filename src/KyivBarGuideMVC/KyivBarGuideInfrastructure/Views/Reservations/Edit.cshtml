@model KyivBarGuideDomain.Model.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReservedById" class="control-label"></label>
                <select asp-for="ReservedById" class="form-control" asp-items="ViewBag.ReservedById"></select>
                <span asp-validation-for="ReservedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservedInId" class="control-label"></label>
                <input asp-for="ReservedInId" class="form-control" />
                <span asp-validation-for="ReservedInId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmedById" class="control-label"></label>
                <select asp-for="ConfirmedById" class="form-control" asp-items="ViewBag.ConfirmedById"></select>
                <span asp-validation-for="ConfirmedById" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SmokerStatus" /> @Html.DisplayNameFor(model => model.SmokerStatus)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ConcertVisit" /> @Html.DisplayNameFor(model => model.ConcertVisit)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
